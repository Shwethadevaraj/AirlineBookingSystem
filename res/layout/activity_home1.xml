<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home1Activity">
<include layout="@layout/toolbar"
    android:id="@+id/toolbar"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="ADD NUMBER OF TRAVELLERS"
      android:textSize="20dp"
      android:layout_marginTop="80dp"
      android:textStyle="bold"
      />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:text="Adults"
        android:textSize="25dp"
        android:id="@+id/adults"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="(12yrs and above)"
        android:textSize="15dp"
        android:layout_marginTop="180dp"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:text="Children"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="(2-12 yrs)"
        android:textSize="15dp"
       android:layout_marginTop="280dp"
        android:textColor="@color/colorPrimary"
        />

    <Spinner
        android:id="@+id/tvspin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset"
        android:layout_alignParentLeft="true"

        android:layout_marginLeft="267dp"
        android:layout_marginTop="66dp"
        android:fontFamily="serif"
        android:hint="BENGALURU"

        />


    <TextView
        android:id="@+id/spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="69dp"
        android:fontFamily="serif"
        android:hint="BENGALURU"
        android:text="Selected"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="320dp"
        android:text="Infants"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="(Under 2 yrs)"
        android:textSize="15dp"
        android:layout_marginTop="350dp"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="CHOOSE CABIN CLASS"
        android:layout_marginTop="380dp"
        android:textSize="20dp"
        />

    <Spinner
        android:id="@+id/tveco"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/reset"


        android:layout_marginTop="205dp"
        android:fontFamily="serif"
        android:hint="BENGALURU"

        />

    <TextView
        android:id="@+id/spin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="180dp"
        android:fontFamily="serif"
        android:hint="BENGALURU"
        android:text="Selected"

        />
    <Button
        android:layout_width="58dp"
        android:layout_height="33dp"
        android:layout_below="@+id/reset"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="333dp"
        android:layout_marginTop="60dp"
        android:text="ok"
        android:id="@+id/ok1"/>


    <Button
        android:layout_width="58dp"
        android:layout_height="33dp"
        android:layout_below="@+id/reset"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="317dp"
        android:layout_marginTop="177dp"
        android:text="ok"
        android:id="@+id/ok2"/>

    <Button
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:background="@drawable/economy"
android:id="@+id/eco"
        android:text="Economy/Premium Economy"

        android:textColor="@color/colorPrimary" />

    <Button
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="500dp"
        android:layout_toRightOf="@+id/business"
        android:background="@drawable/economy"
        android:text="Premium Economy"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/business"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:background="@drawable/economy"
        android:text="Business"
        android:textColor="@color/colorPrimary" />
    <TextView
       android:id="@+id/count"
        android:text="0"

        android:layout_toRightOf="@+id/adults"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:textColor="#ffffff"
        android:background="@drawable/done"
        android:id="@+id/don"
        android:layout_marginTop="600dp"/>

  <Button
      android:id="@+id/minus"
      android:layout_width="57dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="132dp"
      android:layout_marginTop="150dp"
      android:layout_toRightOf="@+id/adults"
      android:text="-"
      android:textSize="20dp"
      android:textStyle="bold" />

  <Button
        android:id="@+id/reset"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@+id/minus"
        android:text="0"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/plus"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@+id/minus"
        android:text="+"
        android:textSize="20dp"
        android:textStyle="bold"/>

</RelativeLayout>
