<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_activity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Round trip->"
        android:textColor="@android:color/background_light"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/tvfrom"
        android:layout_width="151dp"
        android:height="15dp"
        android:text="FROM"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_height="30px"
        android:layout_marginTop="200dp"/>

    <Spinner
        android:id="@+id/tvfromdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvfrom"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-1dp"
        android:fontFamily="serif"
        android:hint="BENGALURU"

        />

    <view
        android:id="@+id/view2"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvfromdetails"
        android:layout_marginTop="16dp"
        android:background="#2C2B2E" />




    <TextView
        android:id="@+id/tvto"
        android:layout_width="151dp"
        android:height="15dp"
        android:text="TO"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_height="30px"
        android:layout_marginTop="300dp"/>

    <Spinner
        android:id="@+id/tvtodetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvto"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-1dp"
        android:fontFamily="serif"
        android:hint="BENGALURU"

        />

    <view
        android:id="@+id/view"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvtodetails"
        android:layout_marginTop="16dp"
        android:background="#2C2B2E" />

    <Button
        android:id="@+id/btdeparture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginTop="13dp"
        android:text="DEPARTURE-"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/edtdeparture"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/btdeparture"
        android:hint="DD/MM/YY"
        android:inputType="date" />

    <Button
        android:id="@+id/btreturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/btdeparture"
        android:text="RETURN"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/edtreturn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/btreturn"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/edtdeparture"
        android:hint="DD/MM/YY"
        android:inputType="date" />


    <view
        android:id="@+id/view1"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/eddeparture"
        android:layout_marginTop="450dp"
        android:background="#2C2B2E" />



    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/travel"
        android:background="@drawable/ed_design"
        android:layout_marginTop="450dp"
        android:textColor="#ffffff"
        android:text="Search" />


</RelativeLayout>